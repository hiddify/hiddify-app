<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Ultra Performance App Theme -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the activity. Automatically removed when
             Flutter draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
        
        <!-- Advanced graphics optimizations -->
        <item name="android:hardwareAccelerated">true</item>
        <item name="android:largeHeap">true</item>
        
        <!-- High refresh rate support -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Smooth transitions -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    
    <!-- Normal app theme after splash -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:hardwareAccelerated">true</item>
        <item name="android:largeHeap">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    
    <!-- Ultra smooth window animations -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>